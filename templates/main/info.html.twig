 {% extends 'base.html.twig' %}

{% block body %}
<style>
  h1{
    text-align:center;
    font-size:70px;
    font-weight: 900;  
    }
</style>
<header>
    <h1>{{ list.jmeno }}</h1>
</header>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Informace</th>
      <th scope="col">Výška</th>
      <th scope="col">Váha</th>
      <th scope="col">Frajer</th>
      <th scope="col">Smradoch</th>
    </tr>
  </thead>
  <div class="form-group">
    <a class="btn btn-info text-white" href="{{path("main")}}">Zpět na hlavní stranu</a>
  </div> 
  <tbody>
    <div>
      <img class="img-thumbnail" src="/images/{{list.img}}" alt="{{list.jmeno}}">
      <div>
        <h2>Hodnocení</h2>
        <h2>{{ list.hodnoceni }}</h2>
      </div>
    </div>
    <tr>
      <th scope="row">{{ list.id }}</th>
      <td>{{ list.informace }}</td>
      <td>{{ list.height }} cm</td>
      <td>{{ list.weight }} kg</td>
      <td> 
        {% if list.frajer == true %}
          Frajer
        {% else %}
          X
        {% endif %}
      </td>
      <td> 
        {% if list.smradoch == true %}
          Smradoch
        {% else %}
          X
        {% endif %}
      </td>      

      <td>
        <a class="btn btn-warning" href="{{path("update",{'id': list.id })}}">Změnit</a>
        <a class="btn btn-danger" href="{{path("delete",{'id': list.id })}}">Odstranit</a>
      </td>
    </tr>
  </tbody>
</table>
</div>

{% endblock %}
