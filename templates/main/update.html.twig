 {% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Update form</h3>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="col-md-6 offse-md-3">
            {{ form_start(form) }}
               <div class="form-group">
                    {{ form_label(form.title)}}
                    {{ form_widget(form.title,{'attr':{'class':'form-controll'}})}}
               </div>
                <div class="form-group">
                    {{ form_label(form.content)}}
                    {{ form_widget(form.content,{'attr':{'class':'form-controll'}})}}
               </div>
               <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Update</button>
               </div>               
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}